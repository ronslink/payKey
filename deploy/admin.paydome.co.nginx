# nginx config for admin.paydome.co
# Deploy: cp deploy/admin.paydome.co.nginx /etc/nginx/sites-available/admin.paydome.co.conf
#         ln -sf /etc/nginx/sites-available/admin.paydome.co.conf /etc/nginx/sites-enabled/
#         nginx -t && nginx -s reload
#
# ROUTING STRATEGY:
# The backend has two distinct @Controller prefix styles:
#   - @Controller('auth')         → backend path: /auth/...       (no api prefix)
#   - @Controller('api/admin/...')→ backend path: /api/admin/...  (includes api prefix)
#
# nginx must handle these differently:
#   /api/admin/* → proxy_pass WITHOUT stripping /api (pass full path)
#   /api/*       → proxy_pass WITH stripping /api    (auth routes: /auth/login etc)

server {
    server_name admin.paydome.co;

    # Admin API routes: @Controller('api/admin/...') includes the /api prefix
    # e.g. GET /api/admin/analytics/infra → GET /api/admin/analytics/infra on localhost:3000
    # NOTE: more specific location block — matched before /api/ below
    location /api/admin/ {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        add_header Access-Control-Allow-Origin "https://admin.paydome.co" always;
        add_header Access-Control-Allow-Credentials "true" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, Origin, X-Requested-With" always;

        if ($request_method = OPTIONS) {
            add_header Access-Control-Allow-Origin "https://admin.paydome.co";
            add_header Access-Control-Allow-Credentials "true";
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS";
            add_header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, Origin, X-Requested-With";
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 204;
        }
    }

    # Auth routes: @Controller('auth') — strip the /api prefix
    # e.g. POST /api/auth/login → POST /auth/login on localhost:3000
    location /api/ {
        proxy_pass http://localhost:3000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        add_header Access-Control-Allow-Origin "https://admin.paydome.co" always;
        add_header Access-Control-Allow-Credentials "true" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, Origin, X-Requested-With" always;

        if ($request_method = OPTIONS) {
            add_header Access-Control-Allow-Origin "https://admin.paydome.co";
            add_header Access-Control-Allow-Credentials "true";
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS";
            add_header Access-Control-Allow-Headers "Content-Type, Authorization, Accept, Origin, X-Requested-With";
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 204;
        }
    }

    # Serve admin dashboard static files (React SPA on port 1971)
    location / {
        proxy_pass http://localhost:1971;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/admin.paydome.co/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/admin.paydome.co/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    if ($host = admin.paydome.co) {
        return 301 https://$host$request_uri;
    }
    listen 80;
    server_name admin.paydome.co;
    return 404;
}
